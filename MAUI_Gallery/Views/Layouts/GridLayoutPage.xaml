<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Gallery.Views.Layouts.GridLayoutPage"
             Title="GridLayoutPage">
    <Grid 
        BackgroundColor="Black" 
        Padding="1"
        Margin="20" 
        ColumnDefinitions="6*, Auto, 2*, 2*" 
        RowDefinitions="50,100,10"
        RowSpacing="10"
        ColumnSpacing="1">
        
        <BoxView Color="MediumAquamarine"/>
        <Label Text="Olá Mundo"/>

        <BoxView Color="ForestGreen" Grid.Column="1" WidthRequest="50"/>
        <BoxView Color="DarkGreen"  Grid.Column="2" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
        
        <Label Text="Olá Mundo!" Grid.Column="2" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>

        <BoxView Color="Orange" Grid.Row="1"/>
        <BoxView Color="Red" Grid.Row="1" Grid.Column="1"/>
        <BoxView Color="White" HeightRequest="10" Grid.Row="2" Grid.ColumnSpan="4"/>
    </Grid>
</ContentPage>